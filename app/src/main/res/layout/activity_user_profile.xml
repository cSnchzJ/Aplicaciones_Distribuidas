<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/profile_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/common_google_signin_btn_icon_light" />

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Correo electrónico"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Available slots -->
        <Button
            android:id="@+id/slot_a3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="La casilla A3 disponible"
            android:background="@color/light_green" />

        <Button
            android:id="@+id/slot_6c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="La casilla 6c disponible"
            android:background="@color/light_green" />

        <Button
            android:id="@+id/slot_l8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="La casilla L8 disponible"
            android:background="@color/light_green" />

        <!-- Logo -->
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_upiita" />

        <!-- Account Settings -->
        <TextView
            android:id="@+id/account_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text="Configuración de cuenta"
            android:textColor="@color/blue"
            android:textStyle="bold" />

        <!-- User Details (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/user_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email: user@example.com" />

            <TextView
                android:id="@+id/phoneTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone: 123-456-7890" />

            <TextView
                android:id="@+id/vehicleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle Registration: ABC123" />

            <TextView
                android:id="@+id/userTypeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Type: Regular" />

            <Button
                android:id="@+id/modify_fields_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Modificar campos" />
        </LinearLayout>

        <!-- Logout -->
        <TextView
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:text="Salir app"
            android:textColor="@color/red"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>